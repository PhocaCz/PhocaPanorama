	<option value="1">JPUBLISHED</option>
	<option	value="0">JUNPUBLISHED</option>
</field>



<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL" description="COM_PHOCAPANORAMA_FIELD_LANGUAGE_DESC" class="inputbox">
	<option value="*">JALL</option>
</field>

<field name="date" type="Calendar" class="inputbox" label="COM_PHOCAPANORAMA_FIELD_DATE_LABEL" description="COM_PHOCAPANORAMA_FIELD_DATE_DESC" format="%Y-%m-%d %H:%M:%S" size="20" filter="user_utc" />

<field name="hits" type="Text" class="inputbox" size="6" label="COM_PHOCAPANORAMA_FIELD_HITS_LABEL" description="COM_PHOCAPANORAMA_FIELD_HITS_DESC" />

	
	</fieldset>
	
	<fields name="metadata">
