<field name="alias" type="text" class="inputbox" size="40" label="COM_PHOCAPANORAMA_FIELD_ALIAS_LABEL" description="COM_PHOCAPANORAMA_FIELD_ALIAS_DESC" />

<field name="catid" type="phocapanoramacategory" label="COM_PHOCAPANORAMA_FIELD_CATEGORY_LABEL" description="COM_PHOCAPANORAMA_FIELD_CATEGORY_DESC" class="inputbox" required="true" />

<field name="image" type="media"  label="COM_PHOCAPANORAMA_FIELD_IMAGE_LABEL"  description="COM_PHOCAPANORAMA_FIELD_IMAGE_CAT_LABEL" class="inputbox" size="40" />

<field name="ordering" type="PhocaPanoramaOrdering" table="file" class="inputbox" label="COM_PHOCAPANORAMA_FIELD_ORDERING_LABEL" description="COM_PHOCAPANORAMA_FIELD_ORDERING_DESC" />

<field name="folder" type="text" class="inputbox" size="40" label="COM_PHOCAPANORAMA_FIELD_FOLDER_LABEL" description="COM_PHOCAPANORAMA_FIELD_FOLDER_DESC" />

<field name="iframe_link" type="textarea" label="COM_PHOCAPANORAMA_FIELD_IFRAME_LINK_LABEL" description="COM_PHOCAPANORAMA_FIELD_IFRAME_LINK_DESC" rows="2" cols="26" default="" />

<field name="image" type="media"  label="COM_PHOCAPANORAMA_FIELD_IMAGE_LABEL"  description="COM_PHOCAPANORAMA_FIELD_IMAGE_ITEM_LABEL" class="inputbox" size="40" />

